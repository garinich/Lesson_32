@model BusinessLayer.ModelsDTO.BookDTO
@{
    ViewBag.Title = "Book Details - \"@Model.Name\"";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book Details - "@Model.Name"</h2>

<dl class="row details first">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10"><a href="/BookStore/CategoryDetails/@Model.Category.Id">@Model.Category.Name</a></dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Writers</dt>
    <dd class="col-sm-10">
        <ul class="list-unstyled">
            @foreach (var writer in Model.Writers)
            {
                <li>- <a href="/BookStore/WriterDetails/@writer.Id">@writer.Name</a></li>
            }
        </ul>
    </dd>
</dl>
