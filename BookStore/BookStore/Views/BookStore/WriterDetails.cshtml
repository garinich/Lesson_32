@model BusinessLayer.ModelsDTO.WriterDTO
@{
    ViewBag.Title = "Writer Details - \"@Model.Name\"";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Writer Details - "@Model.Name"</h2>

<dl class="row details first">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Books</dt>
    <dd class="col-sm-10">
        <ul class="list-unstyled">
            @foreach (var book in Model.Books)
            {
                <li>- <a href="/BookStore/Details/@book.Id">@book.Name</a></li>
            }
        </ul>
    </dd>
</dl>
