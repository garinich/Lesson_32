@model IList<BusinessLayer.ModelsDTO.WriterDTO>
@{
    ViewBag.Title = "All Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Writers</h2>

<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Writer Name</th>
        <th>Books</th>
    </tr>
    @foreach (var writer in Model)
    {
        <tr>
            <td>@writer.Id</td>
            <td><a href="/BookStore/WriterDetails/@writer.Id">@writer.Name</a></td>
            <td>
                <ul>
                    @foreach (var book in writer.Books)
                    {
                        <li><a href="/BookStore/Details/@book.Id">@book.Name</a></li>
                    }
                </ul>
            </td>
        </tr>
    }
</table>
